{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": [2, 2, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn"
        ]
    }
}